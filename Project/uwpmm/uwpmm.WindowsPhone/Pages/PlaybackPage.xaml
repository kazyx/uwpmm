<Page
    x:Class="Kazyx.Uwpmm.Pages.PlaybackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kazyx.Uwpmm.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="using:Kazyx.Uwpmm.Utility"
    xmlns:control="using:Kazyx.Uwpmm.Control"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.Resources>
        <CollectionViewSource x:Name="RemoteSources" IsSourceGrouped="True" />
        <CollectionViewSource x:Name="LocalSources" IsSourceGrouped="True" />

        <util:BoolToVisibilityConverter x:Key="B2VConverter" />
        <util:BoolToVisibilityReverseConverter x:Key="B2VRConverter" />

        <Storyboard x:Name="ShowTitleBlockAnimation">
            <DoubleAnimation Duration="0:0:0.5" From="0.0" To="0.9" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="TitleBlock" />
        </Storyboard>
        <Storyboard x:Name="HideTitleBlockAnimation">
            <DoubleAnimation Duration="0:0:0.5" From="109" To="0" Storyboard.TargetProperty="Height" Storyboard.TargetName="TitleBlock" />
        </Storyboard>
        <Storyboard x:Name="ShowSettingAnimation">
            <DoubleAnimation Duration="0:0:0.1" From="0.0" To="0.9" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="AppSettings" />
        </Storyboard>
        <Storyboard x:Name="HideSettingAnimation">
            <DoubleAnimation Duration="0:0:0.1" From="0.9" To="0.0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="AppSettings" />
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Pivot x:Name="PivotRoot" SelectionChanged="Pivot_SelectionChanged" Loaded="PivotRoot_Loaded">
            <PivotItem Margin="0,-16,0,0">
                <PivotItem.Header>
                    <TextBlock Text="{Binding [Viewer_StoragePhone], Source={StaticResource LocalizedStrings}}" Margin="0,8,0,0"
                               Style="{StaticResource SubheaderTextBlockStyle}" FontWeight="Bold"/>
                </PivotItem.Header>
                <Grid>
                    <SemanticZoom x:Name="LocalSemanticZoom">
                        <SemanticZoom.ZoomedInView>
                            <GridView x:Name="LocalGrid"
                                      ItemsSource="{Binding Source={StaticResource LocalSources}}"
                                      SelectionChanged="LocalGrid_SelectionChanged"
                                      ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                                      Loaded="LocalGrid_Loaded"
                                      Unloaded="LocalGrid_Unloaded">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="116" Width="116" Margin="2,2" Holding="LocalGrid_Holding">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="48"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="48"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="48"/>
                                            </Grid.RowDefinitions>
                                            <Grid.Background>
                                                <SolidColorBrush Color="{StaticResource PhoneChromeColor}"/>
                                            </Grid.Background>
                                            <Image Grid.ColumnSpan="3" Grid.RowSpan="2" x:Name="LocalThumbnailImage" Width="108" Height="108" Stretch="Uniform"
                                                   Source="{Binding Path=ThumbnailImage}" Tapped="LocalThumbnailImage_Tapped"/>
                                            <Image Grid.Row="1" Grid.Column="2" Source="/Assets/Screen/mode_movie.png"
                                                   Visibility="{Binding IsMovie, Converter={StaticResource B2VConverter}}"
                                                   IsHitTestVisible="False" CacheMode="BitmapCache" Margin="0,0,20,20"/>
                                            <Border Grid.RowSpan="2" Grid.ColumnSpan="3"
                                                    Visibility="{Binding IsSelectable, Converter={StaticResource B2VRConverter}}">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{StaticResource PhoneControlDisabledColor}"/>
                                                </Border.Background>
                                            </Border>
                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="{Binding [Viewer_MenuPlayback], Source={StaticResource LocalizedStrings}}" Click="LocalPlayback_Click" />
                                                    <MenuFlyoutItem Text="{Binding [Viewer_MenuDelete], Source={StaticResource LocalizedStrings}}" Click="LocalDelete_Click" />
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" ItemHeight="100" ItemWidth="100"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.GroupStyle>
                                    <GroupStyle HidesIfEmpty="True">
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding Key}" Style="{StaticResource GroupHeaderTextBlockStyle}" Padding="8,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GroupStyle.HeaderTemplate>
                                    </GroupStyle>
                                </GridView.GroupStyle>
                            </GridView>
                        </SemanticZoom.ZoomedInView>
                        <SemanticZoom.ZoomedOutView>
                            <GridView ScrollViewer.IsVerticalScrollChainingEnabled="False"
                                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="{ThemeResource ContentDialogDimmingThemeBrush}"
                                              Height="188" Width ="188" Margin="8,8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Image Source="{Binding Group.RandomThumbnail}"
                                                   Grid.Row="0" Grid.RowSpan="2" />
                                            <Border Background="{ThemeResource ContentDialogDimmingThemeBrush}"
                                                    Grid.Row="0">
                                                <TextBlock Text="{Binding Group.Key}"
                                                       Style="{StaticResource GroupHeaderTextBlockStyle}"
                                                       Padding="8,0" Margin="0,4,0,0"
                                                       Foreground="{ThemeResource TextBoxForegroundHeaderThemeBrush}"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.Header>
                                    <TextBlock Text="Album View"
                                               Style="{StaticResource SubheaderTextBlockStyle}"
                                               Margin="16,4"/>
                                </GridView.Header>
                            </GridView>
                        </SemanticZoom.ZoomedOutView>
                    </SemanticZoom>
                </Grid>
            </PivotItem>

            <PivotItem Margin="0,-16,0,0">
                <PivotItem.Header>
                    <TextBlock x:Name="TitleBlock" Text="{Binding [Viewer_StorageCamera], Source={StaticResource LocalizedStrings}}"
                               Margin="0,8,0,0" Style="{StaticResource SubheaderTextBlockStyle}" FontWeight="Bold"/>
                </PivotItem.Header>
                <Grid>
                    <TextBlock x:Name="UnsupportedMessage"
                               Text="{Binding [Viewer_StorageAccessNotSupportedDetail], Source={StaticResource LocalizedStrings}}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center" Margin="36,0"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <SemanticZoom x:Name="RemoteSemanticZoom">
                        <SemanticZoom.ZoomedInView>
                            <GridView x:Name="RemoteGrid"
                                      ItemsSource="{Binding Source={StaticResource RemoteSources}}"
                                      SelectionChanged="RemoteGrid_SelectionChanged"
                                      ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                                      Loaded="RemoteGrid_Loaded"
                                      Unloaded="RemoteGrid_Unloaded">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="116" Width="116" Margin="2,2" Holding="RemoteGrid_Holding">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="48"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="48"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="48"/>
                                            </Grid.RowDefinitions>
                                            <Grid.Background>
                                                <SolidColorBrush Color="{StaticResource PhoneChromeColor}"/>
                                            </Grid.Background>
                                            <Image Grid.ColumnSpan="3" Grid.RowSpan="2" x:Name="RemoteThumbnailImage" Width="108" Height="108" Stretch="Uniform"
                                                   Source="{Binding Path=ThumbnailImage}" Tapped="RemoteThumbnailImage_Tapped"/>
                                            <Image Grid.Row="1" Grid.Column="0" Source="/Assets/Screen/protected.png"
                                                   Visibility="{Binding Path=Source.Protected, Converter={StaticResource B2VConverter}}"
                                                   IsHitTestVisible="False" CacheMode="BitmapCache" Margin="0,0,20,20"/>
                                            <Image Grid.Row="1" Grid.Column="2" Source="/Assets/Screen/mode_movie.png"
                                                   Visibility="{Binding IsMovie, Converter={StaticResource B2VConverter}}"
                                                   IsHitTestVisible="False" CacheMode="BitmapCache" Margin="0,0,20,20"/>
                                            <Border Grid.RowSpan="2" Grid.ColumnSpan="3"
                                                    Visibility="{Binding IsSelectable, Converter={StaticResource B2VRConverter}}">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{StaticResource PhoneControlDisabledColor}"/>
                                                </Border.Background>
                                            </Border>
                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="{Binding [Viewer_MenuPlayback], Source={StaticResource LocalizedStrings}}" Click="Playback_Click" />
                                                    <MenuFlyoutItem Text="{Binding [Viewer_MenuCopyToPhone], Source={StaticResource LocalizedStrings}}" Click="CopyToPhone_Click"
                                                                    Visibility="{Binding IsMovie, Converter={StaticResource B2VRConverter}}"/>
                                                    <MenuFlyoutItem Text="{Binding [Viewer_MenuDelete], Source={StaticResource LocalizedStrings}}" Click="Delete_Click"
                                                                    Visibility="{Binding Path=Source.Protected, Converter={StaticResource B2VRConverter}}" />
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" ItemHeight="100" ItemWidth="100"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.GroupStyle>
                                    <GroupStyle HidesIfEmpty="True">
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding Key}" Style="{StaticResource GroupHeaderTextBlockStyle}" Padding="8,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GroupStyle.HeaderTemplate>
                                    </GroupStyle>
                                </GridView.GroupStyle>
                            </GridView>
                        </SemanticZoom.ZoomedInView>
                        <SemanticZoom.ZoomedOutView>
                            <GridView ScrollViewer.IsVerticalScrollChainingEnabled="False"
                                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="{ThemeResource ContentDialogDimmingThemeBrush}"
                                              Height="188" Width ="188" Margin="8,8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Image Source="{Binding Group.RandomThumbnail}"
                                                   Grid.Row="0" Grid.RowSpan="2" />
                                            <Border Background="{ThemeResource ContentDialogDimmingThemeBrush}"
                                                    Grid.Row="0">
                                                <TextBlock Text="{Binding Group.Key}"
                                                       Style="{StaticResource GroupHeaderTextBlockStyle}"
                                                       Padding="8,0" Margin="0,4,0,0"
                                                       Foreground="{ThemeResource TextBoxForegroundHeaderThemeBrush}"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.Header>
                                    <TextBlock Text="Album View"
                                               Style="{StaticResource SubheaderTextBlockStyle}"
                                               Margin="16,4"/>
                                </GridView.Header>
                            </GridView>
                        </SemanticZoom.ZoomedOutView>
                    </SemanticZoom>
                </Grid>
            </PivotItem>
        </Pivot>
        <Border x:Name="HeaderBlocker" Height="74" VerticalAlignment="Top" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource PhoneBackgroundColor}"/>
            </Border.Background>
            <TextBlock x:Name="HeaderBlockerText" VerticalAlignment="Center" Style="{StaticResource SubheaderTextBlockStyle}" />
        </Border>

        <control:PhotoPlaybackScreen x:Name="PhotoScreen" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0"
                                          ManipulationStarted="PhotoScreen_ManipulationStarted" ManipulationDelta="PhotoScreen_ManipulationDelta" ManipulationCompleted="PhotoScreen_ManipulationCompleted" >
        </control:PhotoPlaybackScreen>

        <Border x:Name="MovieDrawer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
            <!--
            <control:MoviePlaybackScreen x:Name="MovieScreen" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12" CurrentPosition="{Binding CurrentPosition}" Duration="{Binding Duration}"/>
            Avoid binding issue of CurrentPosition and Duration property
            -->
            <control:MoviePlaybackScreen x:Name="MovieScreen" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12"/>
        </Border>

        <Grid Name="AppSettingPanel" Visibility="Collapsed" >
            <Grid.Background>
                <SolidColorBrush Color="{StaticResource PhoneBackgroundColor}"/>
            </Grid.Background>
            <ScrollViewer >
                <StackPanel Name="AppSettings" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-12,0,0,0" >
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <control:Toast x:Name="Toast" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
    </Grid>
</Page>
