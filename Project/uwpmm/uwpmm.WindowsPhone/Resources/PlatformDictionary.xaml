<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kazyx.Uwpmm.Resources">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="AccentColorBrush" Color="{ThemeResource SystemColorControlAccentColor}"/>
            <Style x:Key="ShootingParamStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="6,3"/>
                <Setter Property="FontSize" Value="16" />
            </Style>
            <BitmapImage x:Key="ApertureIcon" UriSource="/Assets/LiveviewScreen/aperture.png" />
            <SolidColorBrush x:Key="SemiTransparentBackgroundColorBrush" Color="{ThemeResource PhoneBackgroundColor}" Opacity="0.8" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
