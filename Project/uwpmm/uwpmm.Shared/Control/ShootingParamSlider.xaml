<UserControl
    x:Class="Kazyx.Uwpmm.Control.ShootingParamSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kazyx.Uwpmm.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="500">
    
    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <!--todo: find some way to mask this image with foreground brush-->
        <Image Name="SettingImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Height="40"/> 
        <Slider Name="Slider" Grid.Column="1" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged" />
        <TextBlock Name="MaxLabel" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="max" Margin="10" FontSize="16"/>
        <TextBlock Name="MinLabel" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="min" Margin="10" FontSize="16"/>
    </Grid>
</UserControl>
