<Application
    x:Class="Kazyx.Uwpmm.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kazyx.Uwpmm">
    <Application.Resources>
        <local:LocalizedStrings x:Key="LocalizedStrings" />

        <!--For PhotoPlaybackScreem.xaml-->
        <DataTemplate x:Key="DetailInfoTemplate">
            <TextBlock Grid.Row="1" Text="{Binding}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="12,0,0,0" TextWrapping="Wrap" FontSize="16" 
                       Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>
        </DataTemplate>
    </Application.Resources>
</Application>
