<Application
    x:Class="Kazyx.Uwpmm.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Kazyx.Uwpmm">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/PlatformDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <local:LocalizedStrings x:Key="LocalizedStrings" />

            <!--For PhotoPlaybackScreem.xaml-->
            <DataTemplate x:Key="DetailInfoTemplate">
                <TextBlock Grid.Row="1" Text="{Binding}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="12,0,0,0" TextWrapping="Wrap" FontSize="16" 
                       Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
